<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="icon" type="image/x-icon" href="/resources/icon.svg">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <!-- Title -->
    <div class="container">
        <h1>Admin Dashboard</h1>
    </div>
    <button onclick="MovieAPI.signOut()" class= "btn btn-danger float-end"><i class="fas fa-sign-out-alt"></i> Logout</button>
    <!-- Options -->

     <div class="d-flex align-items-center">
        <a href="/" class="btn btn-outline-warning right"><i class="fas fa-search"></i> Back to Search</a>
        <a href="/favorites" class="btn btn-outline-warning"><i class="fas fa-film"></i> Back to Favorites</a>
        <input type="text" id="search-txt" class="form-control-search" placeholder="Search...">
    </div>

    <!-- Spinner for loading -->
    <div id="loading-spinner" class="spinner-container">
        <div class="spinner-border text-warning" role="status"></div>
    </div>
    
    <!-- Table paging inside -->
    <div class ="container-fluid">
        
        <div class="row mt-4 container-center">
            <div class="container" id="container">
                <button onclick="showUserTable()" class="custom-card users"><i class="fa-solid fa-user"></i><div id="amountUsers"></div> Edit Users <i class="fa-solid fa-gear black"></i></button>
                <button onclick="showLinksTable()" class="custom-card total-links"><i class="fa-solid fa-link"></i><div id="amountLinks"></div> Edit Links <i class="fa-solid fa-gear black"></i></button>
                <button onclick="showReviewsTable()"class="custom-card total-reviews"><i class="fa-solid fa-star"></i><div id="amountReviews"></div> Edit Reviews <i class="fa-solid fa-gear black"></i></button>
                <button onclick="_0x1a2b()" class="custom-card total-clicks" id="secret-button"><i class="fa-solid fa-computer-mouse"></i><div id="amountClicked"></div> Total Links Clicked</button>
            </div>
            <div class="custom-table" id="user-table"></div>
            <div class="custom-table" id="links-table"></div>
            <div class="custom-table" id="reviews-table"></div>
        </div>
    </div>
    <script src="/js/dashboard.js"></script>
    <script src="/js/movieAPI.js"></script>
    <script>
        const AdminName = "<%= userName %>";
    </script>
</body>
</html>