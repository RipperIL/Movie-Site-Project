<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="icon" type="image/x-icon" href="/resources/icon.svg">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Movies</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/default.css">
</head>
<body>
 <button onclick="MovieAPI.signOut()" class="btn btn-danger float-end"><i class="fas fa-sign-out-alt"></i> Logout</button>
    <!-- Main Container -->
    <div class="container mt-4">
        <h1>My Favorite Movies - <%= fullName %></h1>
        <div class="row align-items-center mb-4">

            <!-- Options -->
            <div class="dropdown" id="visibility">
                <a href="/" class="btn btn-outline-warning" id="back"><i class="fas fa-search"></i> Back to Search</a>
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                Sort by
                </button>
                <button onclick="showDashboard()" id="dashboard" class="btn btn-outline-warning"><i class="fa-regular fa-chart-bar"></i> Top-Links</button>
                <button onclick="showDashboardAdmin()" id="dashboardAdmin" class="btn btn-outline-warning hide-btn"><i class="fa-solid fa-screwdriver-wrench"></i> Admin Panel</button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <li><a class="dropdown-item" onclick="MovieAPI.sortFavorites('release')">Release date</a></li>
                    <li><a class="dropdown-item" onclick="MovieAPI.sortFavorites('rating')">Rating</a></li>
                    <li><a class="dropdown-item" onclick="MovieAPI.sortFavorites('name')">Name</a></li>
                </ul>
            </div>
        </div>
            <!-- Spinner for loading -->
        <div id="loading-spinner" class="spinner-container">
            <div class="spinner-border text-warning" role="status">
            </div>
        </div>

        <!-- Container for movies -->
        <div class="row" id="movies-container-favorite"></div>   
    </div>

<script src="/js/movieAPI.js"></script>
<script>
    const role = "<%= role %>";
    const name = "<%= fullName %>";

    if(role === 'Admin'){
        document.getElementById('dashboardAdmin').style.visibility = 'visible';   
    }
    // get query if any
    const url = new URL(window.location.href);
    const queryParams = new URLSearchParams(url.search);    
    const query = queryParams.get('query');
    if(query){
        document.getElementById('back').href = `/?query=${query}`;
    }

    // Show spinner
    const container = document.getElementById('movies-container-favorite');
    document.getElementById("loading-spinner").style.visibility = "visible"; 
    container.style.visibility ="hidden";

    // fetching from API and Rendering them
    var moviesFavorites = [];
    try{
    getFavorites().then(movies => {                                    
        const promises = movies.map(movie => {
        return MovieAPI.fetchMoviesDetails(movie.id).then(data => {
            moviesFavorites.push(data);
        });
        });

        // render all movies after fetching from API
        Promise.all(promises).then(() => {                              
            MovieAPI.RenderMoviesCard(moviesFavorites, container, '');
        });
    });
    }catch(err){}
    finally{
        document.getElementById("loading-spinner").style.visibility = "hidden"; // Hide spinner
        container.style.visibility ="visible";
    }
// redirection for dashboard
    function showDashboard() {
        window.location.href = `/dashboarduser/${name}`;
    }

    function showDashboardAdmin() {
        window.location.href = `/dashboard/${role}`;
    }

// request favorites from API
  async function getFavorites(){
    try{
    const response = await fetch('/favorites/retrieve', {
        method: 'GET',
        credentials: 'include',
      });
    if(response.ok){
        const data = await response.json();
        return data.movies;
    }
}catch(err){
    console.error(err);
    }
}
</script>
</body>
</html>
