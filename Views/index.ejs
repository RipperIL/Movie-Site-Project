<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="icon" type="image/x-icon" href="/resources/icon.svg">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Movies</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/default.css">
</head>

<body class="other-body">
    <button onclick="MovieAPI.signOut()" class="btn btn-danger float-end"><i class="fas fa-sign-out-alt"></i> Logout</button>
    <!-- Main Container -->
    <div class="container mt-4">
        <h1 id="welcome">My Movies - <%= fullName %></h1>
        <div class="mb-4">

            <!-- Options -->
            <input type="text" id="search-txt-movie" class="form-control" placeholder="Search Movies...">
            <div class="col-6 correction d-flex gap-2">
                <button onclick="showFavorites()" class="btn btn-outline-warning"><i class="fas fa-film"></i> Favorites</button>
                <button onclick="showDashboard()" id="dashboard" class="btn btn-outline-warning"><i class="fa-regular fa-chart-bar"></i> Top-Links</button>
                <button onclick="showDashboardAdmin()" id="dashboardAdmin" class="btn btn-outline-warning hide-btn"><i class="fa-solid fa-screwdriver-wrench"></i> Admin Panel</button>
            </div>
        </div>

        <!-- Spinner for loading -->
        <div id="loading-spinner" class="spinner-container">
            <div class="spinner-border text-warning" role="status"></div>
        </div>
        
         <!-- Movies Container -->
        <div class="row" id="movies-container"></div>   
    </div>

     <!-- Used in JS -->
    <script>
        const query = "<%- query %>";
        const user = "<%= fullName %>";
        const role = "<%= role %>";

        if(role === 'Admin'){
            document.getElementById('dashboardAdmin').style.visibility = 'visible';
        }
    </script>
    <script src="/js/index.js"></script>
    <script src="/js/movieAPI.js"></script>
</body>
</html>
